style=\"padding-top: 0vh; padding-bottom: 1vh;\"></h2>\r\n      <button @click=\"openTaskForm\" @mouseover=\"animateButton\" @mouseleave=\"resetButton\" class=\"buttons\">+</button>\r\n    </div>\r\n    <!-- Include the EditTaskModal component -->\r\n    <edit-task-modal :show-modal=\"showEditModal\" @close=\"closeEditModal\" :task=\"selectedTask\"></edit-task-modal>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Cookies from 'js-cookie';\r\nimport axios from 'axios';\r\nimport EditTaskModal from './EditTaskModal.vue';\r\n\r\nexport default {\r\n  name: 'AppTareas',\r\n  components: {\r\n    EditTaskModal,\r\n  },\r\n  data() {\r\n    return {\r\n      tasks: [],\r\n      showTaskForm: false,\r\n      showEditModal: false,\r\n      selectedTask: null,\r\n    };\r\n  },\r\n  methods: {\r\n    goToPage() {\r\n      window.scrollTo({ top: 0, behavior: 'smooth' });\r\n    },\r\n    toggleTaskStatus(task) {\r\n      const endpoint = task.status === 'Completada'\r\n        ? `http://localhost:8080/api/v1/tasks/${task.id}/mark-incomplete`\r\n        : `http://localhost:8080/api/v1/tasks/${task.id}/mark-complete`;\r\n\r\n      axios.put(endpoint)\r\n        .then(() => {\r\n          task.status = task.status === 'Completada' ? 'Incompleta' : 'Completada';\r\n        })\r\n        .catch(error => {\r\n          console.error(`Error updating task status:`, error);\r\n        });\r\n    },\r\n    openTaskForm() {\r\n      this.showTaskForm = true;\r\n    },\r\n    closeTaskForm() {\r\n      this.showTaskForm = false;\r\n    },\r\n    openEditModal(task) {\r\n      this.selectedTask = task;\r\n      this.showEditModal = true;\r\n    },\r\n    closeEditModal() {\r\n      this.selectedTask = null;\r\n      this.showEditModal = false;\r\n    },\r\n    /*deleteTask(taskId) {\r\n      // Implement logic to delete the task\r\n      // You can use the taskId to make a delete request\r\n    },*/\r\n  },\r\n  computed: {\r\n    hasUserIdCookie() {\r\n      return !!Cookies.get('userId');\r\n    },\r\n  },\r\n  mounted() {\r\n    const fetchTasks = () => {\r\n      axios.get(`http://localhost:8080/api/v1/tasks/all`)\r\n        .then(response => {\r\n          this.tasks = response.data.filter(task => task.user_id === Cookies.get('userId'));\r\n        })\r\n        .catch(error => {\r\n          console.error('Error fetching tasks:', error);\r\n        });\r\n    };\r\n\r\n    if (this.hasUserIdCookie) {\r\n      fetchTasks();\r\n    }\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n  .box {\r\n    display: flex;\r\n    align-items: center;\r\n    justify-content: center;\r\n    flex-direction: column;\r\n    backdrop-filter: blur(30px);\r\n    background-color: rgba(248, 248, 248, 0.135);\r\n    border-radius: 5vh;\r\n    width: 95%;\r\n    padding-top: 1vh;\r\n    padding-bottom: 3vh;\r\n  }\r\n  .task-list {\r\n    color: white;\r\n  }\r\n  .column-border {\r\n    border: 1px solid white;\r\n  }\r\n\r\n  .container {\r\n    height: 59vh;\r\n    display: flex;\r\n    flex-direction: column;\r\n    justify-content: center;\r\n    align-items: center;\r\n    padding-bottom: 12vh;\r\n  }\r\n  .buttons:hover {\r\n    background-color: #393939;\r\n  }\r\n  .buttons.jump {\r\n    animation: jumpAnimation 0.3s ease-in-out;\r\n  }\r\n\r\n  @keyframes jumpAnimation {\r\n    0% {\r\n      transform: translateY(0);\r\n    }\r\n    50% {\r\n      transform: translateY(-5px);\r\n    }\r\n    100% {\r\n      transform: translateY(0);\r\n    }\r\n  }\r\n  .buttons {\r\n    padding-top: 1vh;\r\n    padding-bottom: 1vh;\r\n    background-color: #63636395;\r\n    border-radius: 3vh;\r\n    width: 3%;\r\n    justify-content: center;\r\n    align-items: center;\r\n    color: #e4e2e2;\r\n    border-color: #68686800;\r\n    font-size: 25px;\r\n    transition: background-color 0.3s;\r\n    cursor: pointer;\r\n  }\r\n</style>\r\n"],"mappings":"AA0CA,OAAOA,OAAM,MAAO,WAAW;AAC/B,OAAOC,KAAI,MAAO,OAAO;AACzB,OAAOC,aAAY,MAAO,qBAAqB;AAE/C,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,UA