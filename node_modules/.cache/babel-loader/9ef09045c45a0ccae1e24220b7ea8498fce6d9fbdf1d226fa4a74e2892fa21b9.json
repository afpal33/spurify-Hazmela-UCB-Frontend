{"ast":null,"code":"import Cookies from 'js-cookie';\nimport axios from 'axios';\nimport ShowModal from './ShowModal.vue';\nimport EditTaskModal from './EditTaskModal.vue'; // Import the EditTaskModal component\n\nexport default {\n  name: 'AppTareas',\n  components: {\n    ShowModal,\n    EditTaskModal // Register the EditTaskModal component\n  },\n\n  data() {\n    return {\n      tasks: [],\n      showTaskForm: false,\n      showEditModal: false,\n      selectedTask: null // Store the selected task for editing\n    };\n  },\n\n  methods: {\n    // ... (existing methods)\n\n    // Method to open the edit task modal\n    openEditModal(task) {\n      this.selectedTask = task; // Set the selected task\n      this.showEditModal = true; // Show the edit modal\n    },\n\n    // Method to close the edit task modal\n    closeEditModal() {\n      this.showEditModal = false; // Close the edit modal\n      this.selectedTask = null; // Clear the selected task\n    },\n\n    // Method to update a task\n    updateTask(updatedTask) {\n      // Send a PUT request to update the task with updatedTask data\n      axios.put(`http://localhost:8080/api/v1/tasks/${updatedTask.id}`, updatedTask).then(() => {\n        // Find the index of the updated task and replace it in the tasks array\n        const index = this.tasks.findIndex(task => task.id === updatedTask.id);\n        if (index !== -1) {\n          this.tasks.splice(index, 1, updatedTask);\n        }\n        // Close the edit modal\n        this.closeEditModal();\n      }).catch(error => {\n        console.error('Error updating task:', error);\n      });\n    },\n    // Method to delete a task\n    deleteTask(taskId) {\n      // Send a DELETE request to delete the task with taskId\n      axios.delete(`http://localhost:8080/api/v1/tasks/${taskId}`).then(() => {\n        // Remove the deleted task from the tasks array\n        this.tasks = this.tasks.filter(task => task.id !== taskId);\n      }).catch(error => {\n        console.error('Error deleting task:', error);\n      });\n    }\n  }\n};","map":{"version":3,"names":["Cookies","axios","ShowModal","EditTaskModal","name","components","data","tasks","showTaskForm","showEditModal","selectedTask","methods","openEditModal","task","closeEditModal","updateTask","updatedTask","put","id","then","index","findIndex","splice","catch","error","console","deleteTask","taskId","delete","filter"],"sources":["D:\\Documents\\trabajos_semestre_7\\ing_software\\proyecto-1-TodoList\\TodoList-frontend\\src\\components\\AppTareas.vue"],"sourcesContent":["<template>\r\n  <div class=\"container\" v-if=\"hasUserIdCookie\">\r\n    <div class=\"box\">\r\n      <h1>Lista de Tareas</h1>\r\n      <div class=\"task-list\">\r\n        <table class=\"table-with-border\">\r\n          <thead>\r\n            <tr>\r\n              <th class=\"column-border\">Marcar como completada</th>\r\n              <th class=\"column-border\">Título</th>\r\n              <th class=\"column-border\">Descripción</th>\r\n              <th class=\"column-border\">Fecha</th>\r\n              <th class=\"column-border\">Estado</th>\r\n              <th class=\"column-border\">Acciones</th> <!-- Add Actions column -->\r\n            </tr>\r\n          </thead>\r\n          <tbody>\r\n            <tr v-for=\"task in tasks\" :key=\"task.id\">\r\n              <td class=\"column-border\">\r\n                <input type=\"checkbox\" :checked=\"task.status === 'Completada'\" @change=\"toggleTaskStatus(task)\">\r\n              </td>\r\n              <td class=\"column-border\">{{ task.title }}</td>\r\n              <td class=\"column-border\">{{ task.description }}</td>\r\n              <td class=\"column-border\">{{ task.date }}</td>\r\n              <td class=\"column-border\">{{ task.status }}</td>\r\n              <td class=\"column-border\">\r\n                <button @click=\"openEditModal(task)\">Editar</button>\r\n                <button @click=\"deleteTask(task.id)\">Eliminar</button>\r\n              </td>\r\n            </tr>\r\n          </tbody>\r\n        </table>\r\n      </div>\r\n      <h2 style=\"padding-top: 0vh; padding-bottom: 1vh;\"></h2>\r\n      <button @click=\"openTaskForm\" @mouseover=\"animateButton\" @mouseleave=\"resetButton\" class=\"buttons\">+</button>\r\n    </div>\r\n    <!-- Include the ShowModal component -->\r\n    <show-modal :show-modal=\"showTaskForm\" @close=\"closeTaskForm\"></show-modal>\r\n    <!-- Include the EditTaskModal component -->\r\n    <edit-task-modal :show-modal=\"showEditModal\" :task=\"selectedTask\" @close=\"closeEditModal\" @update-task=\"updateTask\"></edit-task-modal>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Cookies from 'js-cookie';\r\nimport axios from 'axios';\r\nimport ShowModal from './ShowModal.vue';\r\nimport EditTaskModal from './EditTaskModal.vue'; // Import the EditTaskModal component\r\n\r\nexport default {\r\n  name: 'AppTareas',\r\n  components: {\r\n    ShowModal,\r\n    EditTaskModal, // Register the EditTaskModal component\r\n  },\r\n  data() {\r\n    return {\r\n      tasks: [],\r\n      showTaskForm: false,\r\n      showEditModal: false,\r\n      selectedTask: null, // Store the selected task for editing\r\n    };\r\n  },\r\n  methods: {\r\n    // ... (existing methods)\r\n\r\n    // Method to open the edit task modal\r\n    openEditModal(task) {\r\n      this.selectedTask = task; // Set the selected task\r\n      this.showEditModal = true; // Show the edit modal\r\n    },\r\n\r\n    // Method to close the edit task modal\r\n    closeEditModal() {\r\n      this.showEditModal = false; // Close the edit modal\r\n      this.selectedTask = null; // Clear the selected task\r\n    },\r\n\r\n    // Method to update a task\r\n    updateTask(updatedTask) {\r\n      // Send a PUT request to update the task with updatedTask data\r\n      axios\r\n        .put(`http://localhost:8080/api/v1/tasks/${updatedTask.id}`, updatedTask)\r\n        .then(() => {\r\n          // Find the index of the updated task and replace it in the tasks array\r\n          const index = this.tasks.findIndex(task => task.id === updatedTask.id);\r\n          if (index !== -1) {\r\n            this.tasks.splice(index, 1, updatedTask);\r\n          }\r\n          // Close the edit modal\r\n          this.closeEditModal();\r\n        })\r\n        .catch(error => {\r\n          console.error('Error updating task:', error);\r\n        });\r\n    },\r\n\r\n    // Method to delete a task\r\n    deleteTask(taskId) {\r\n      // Send a DELETE request to delete the task with taskId\r\n      axios\r\n        .delete(`http://localhost:8080/api/v1/tasks/${taskId}`)\r\n        .then(() => {\r\n          // Remove the deleted task from the tasks array\r\n          this.tasks = this.tasks.filter(task => task.id !== taskId);\r\n        })\r\n        .catch(error => {\r\n          console.error('Error deleting task:', error);\r\n        });\r\n    },\r\n  },\r\n};\r\n</script>\r\n<style>\r\n    .box {\r\n    display: flex;\r\n    align-items: center;\r\n    justify-content: center;\r\n    flex-direction: column;\r\n    backdrop-filter: blur(30px);\r\n    background-color: rgba(248, 248, 248, 0.135);\r\n    border-radius: 5vh;\r\n    width: 95%;\r\n    padding-top: 1vh;\r\n    padding-bottom: 3vh;\r\n    }\r\n    .task-list{\r\n      color: white;\r\n    }\r\n    .column-border {\r\n  border: 1px solid white;\r\n}\r\n\r\n.container {\r\n  height: 59vh;\r\n  display: flex;\r\n  flex-direction: column;\r\n  justify-content: center;\r\n  align-items: center;\r\n  padding-bottom: 12vh;\r\n}    \r\n.buttons:hover{\r\n  background-color: #393939;\r\n}\r\n.buttons.jump {\r\n  animation: jumpAnimation 0.3s ease-in-out;\r\n}\r\n\r\n@keyframes jumpAnimation {\r\n  0% {\r\n    transform: translateY(0);\r\n  }\r\n  50% {\r\n    transform: translateY(-5px);\r\n  }\r\n  100% {\r\n    transform: translateY(0);\r\n  }\r\n}\r\n.buttons{\r\n  padding-top: 1vh;\r\n  padding-bottom: 1vh;\r\n  background-color: #63636395;\r\n  border-radius: 3vh;\r\n  width: 3%;\r\n  justify-content: center;\r\n  align-items: center;\r\n  color: #e4e2e2;\r\n  border-color: #68686800;\r\n  font-size: 25px;\r\n  transition: background-color 0.3s;\r\n  cursor: pointer;\r\n}\r\n</style>\r\n"],"mappings":"AA4CA,OAAOA,OAAM,MAAO,WAAW;AAC/B,OAAOC,KAAI,MAAO,OAAO;AACzB,OAAOC,SAAQ,MAAO,iBAAiB;AACvC,OAAOC,aAAY,MAAO,qBAAqB,EAAE;;AAEjD,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,UAAU,EAAE;IACVH,SAAS;IACTC,aAAa,CAAE;EACjB,CAAC;;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAE,EAAE;MACTC,YAAY,EAAE,KAAK;MACnBC,aAAa,EAAE,KAAK;MACpBC,YAAY,EAAE,IAAI,CAAE;IACtB,CAAC;EACH,CAAC;;EACDC,OAAO,EAAE;IACP;;IAEA;IACAC,aAAaA,CAACC,IAAI,EAAE;MAClB,IAAI,CAACH,YAAW,GAAIG,IAAI,EAAE;MAC1B,IAAI,CAACJ,aAAY,GAAI,IAAI,EAAE;IAC7B,CAAC;;IAED;IACAK,cAAcA,CAAA,EAAG;MACf,IAAI,CAACL,aAAY,GAAI,KAAK,EAAE;MAC5B,IAAI,CAACC,YAAW,GAAI,IAAI,EAAE;IAC5B,CAAC;;IAED;IACAK,UAAUA,CAACC,WAAW,EAAE;MACtB;MACAf,KAAI,CACDgB,GAAG,CAAE,sCAAqCD,WAAW,CAACE,EAAG,EAAC,EAAEF,WAAW,EACvEG,IAAI,CAAC,MAAM;QACV;QACA,MAAMC,KAAI,GAAI,IAAI,CAACb,KAAK,CAACc,SAAS,CAACR,IAAG,IAAKA,IAAI,CAACK,EAAC,KAAMF,WAAW,CAACE,EAAE,CAAC;QACtE,IAAIE,KAAI,KAAM,CAAC,CAAC,EAAE;UAChB,IAAI,CAACb,KAAK,CAACe,MAAM,CAACF,KAAK,EAAE,CAAC,EAAEJ,WAAW,CAAC;QAC1C;QACA;QACA,IAAI,CAACF,cAAc,CAAC,CAAC;MACvB,CAAC,EACAS,KAAK,CAACC,KAAI,IAAK;QACdC,OAAO,CAACD,KAAK,CAAC,sBAAsB,EAAEA,KAAK,CAAC;MAC9C,CAAC,CAAC;IACN,CAAC;IAED;IACAE,UAAUA,CAACC,MAAM,EAAE;MACjB;MACA1B,KAAI,CACD2B,MAAM,CAAE,sCAAqCD,MAAO,EAAC,EACrDR,IAAI,CAAC,MAAM;QACV;QACA,IAAI,CAACZ,KAAI,GAAI,IAAI,CAACA,KAAK,CAACsB,MAAM,CAAChB,IAAG,IAAKA,IAAI,CAACK,EAAC,KAAMS,MAAM,CAAC;MAC5D,CAAC,EACAJ,KAAK,CAACC,KAAI,IAAK;QACdC,OAAO,CAACD,KAAK,CAAC,sBAAsB,EAAEA,KAAK,CAAC;MAC9C,CAAC,CAAC;IACN;EACF;AACF,CAAC"},"metadata":{},"sourceType":"module","externalDependencies":[]}