{"ast":null,"code":"import Cookies from 'js-cookie';\nimport axios from 'axios';\nimport EditTaskModal from './EditTaskModal.vue';\nexport default {\n  name: 'AppTareas',\n  components: {\n    EditTaskModal\n  },\n  data() {\n    return {\n      tasks: [],\n      showEditModal: false,\n      editedTask: null,\n      showDeleteConfirmation: false,\n      // To control the delete confirmation dialog\n      taskToDelete: null // Store the task to be deleted\n    };\n  },\n\n  methods: {\n    goToPage() {\n      window.scrollTo({\n        top: 0,\n        behavior: 'smooth'\n      });\n    },\n    toggleTaskStatus(task) {\n      // Define the endpoint based on the new status\n      const endpoint = task.status === 'Completada' ? `http://localhost:8080/api/v1/tasks/${task.id}/mark-incomplete` : `http://localhost:8080/api/v1/tasks/${task.id}/mark-complete`;\n\n      // Make a PUT request to update the task status\n      axios.put(endpoint).then(() => {\n        // Update the task's status if the request is successful\n        task.status = task.status === 'Completada' ? 'Incompleta' : 'Completada';\n      }).catch(error => {\n        console.error(`Error updating task status:`, error);\n      });\n    },\n    async fetchTagsForTasks() {\n      try {\n        await Promise.all(this.tasks.map(async task => {\n          // Initialize tags as an empty array for each task\n          task.tags = [];\n          const tagResponse = await axios.get(`http://localhost:8080/api/v1/tag/tag/all`);\n          const taskTags = tagResponse.data.filter(tag => tag.user_id === Cookies.get('userId') && tag.task_id === task.id);\n          task.tags = taskTags.map(tag => tag.tag);\n        }));\n      } catch (error) {\n        console.error('Error fetching tags for tasks:', error);\n      }\n    },\n    openTaskForm() {\n      this.showTaskForm = true;\n    },\n    closeTaskForm() {\n      this.showTaskForm = false;\n    },\n    editTask(task) {\n      this.editedTask = {\n        ...task\n      };\n      this.showEditModal = true;\n    },\n    closeEditModal() {\n      this.showEditModal = false;\n      this.editedTask = null;\n    },\n    updateTask(updatedTask) {\n      const index = this.tasks.findIndex(task => task.id === updatedTask.id);\n      if (index !== -1) {\n        this.tasks[index] = updatedTask;\n      }\n      this.closeEditModal();\n    },\n    confirmDeleteTask(task) {\n      this.showDeleteConfirmation = true;\n      this.taskToDelete = task;\n    },\n    deleteTaskConfirmed() {\n      axios.delete(`http://localhost:8080/api/v1/tasks/${this.taskToDelete.id}`).then(() => {\n        const index = this.tasks.findIndex(task => task.id === this.taskToDelete.id);\n        if (index !== -1) {\n          this.tasks.splice(index, 1);\n        }\n        this.showDeleteConfirmation = false;\n      }).catch(error => {\n        console.error(`Error deleting task:`, error);\n      });\n    },\n    cancelDeleteTask() {\n      this.showDeleteConfirmation = false;\n      this.taskToDelete = null;\n    }\n  },\n  computed: {\n    hasUserIdCookie() {\n      return !!Cookies.get('userId');\n    }\n  },\n  async mounted() {\n    try {\n      const taskResponse = await axios.get(`http://localhost:8080/api/v1/tasks/all`);\n      this.tasks = taskResponse.data.filter(task => task.user_id === Cookies.get('userId'));\n\n      // Fetch tags for each task\n      await this.fetchTagsForTasks();\n    } catch (error) {\n      console.error('Error fetching tasks:', error);\n    }\n  }\n};","map":{"version":3,"names":["Cookies","axios","EditTaskModal","name","components","data","tasks","showEditModal","editedTask","showDeleteConfirmation","taskToDelete","methods","goToPage","window","scrollTo","top","behavior","toggleTaskStatus","task","endpoint","status","id","put","then","catch","error","console","fetchTagsForTasks","Promise","all","map","tags","tagResponse","get","taskTags","filter","tag","user_id","task_id","openTaskForm","showTaskForm","closeTaskForm","editTask","closeEditModal","updateTask","updatedTask","index","findIndex","confirmDeleteTask","deleteTaskConfirmed","delete","splice","cancelDeleteTask","computed","hasUserIdCookie","mounted","taskResponse"],"sources":["D:\\Documents\\trabajos_semestre_7\\ing_software\\proyecto-1-TodoList\\TodoList-frontend\\src\\components\\AppTareas.vue"],"sourcesContent":["<template>\r\n  <div class=\"container\" v-if=\"hasUserIdCookie\">\r\n    <div class=\"box\">\r\n      <h1>Lista de Tareas</h1>\r\n      <div class=\"task-list\">\r\n        <table class=\"table-with-border\">\r\n          <!-- Table headers here -->\r\n          <thead>\r\n            <tr>\r\n              <th class=\"column-border\">Marcar como completada</th>\r\n              <th class=\"column-border\">Título</th>\r\n              <th class=\"column-border\">Descripción</th>\r\n              <th class=\"column-border\">Fecha</th>\r\n              <th class=\"column-border\">Estado</th>\r\n              <th class=\"column-border\">Etiquetas</th>\r\n              <th class=\"column-border\">Acciones</th> <!-- Add this column for Edit and Delete buttons -->\r\n            </tr>\r\n          </thead>\r\n          <tbody>\r\n            <!-- Task rows here -->\r\n            <tr v-for=\"task in tasks\" :key=\"task.id\">\r\n              <td class=\"column-border\">\r\n                <input type=\"checkbox\" :checked=\"task.status === 'Completada'\" @change=\"toggleTaskStatus(task)\">\r\n              </td>\r\n              <td class=\"column-border\">{{ task.title }}</td>\r\n              <td class=\"column-border\">{{ task.description }}</td>\r\n              <td class=\"column-border\">{{ task.date }}</td>\r\n              <td class=\"column-border\">{{ task.status }}</td>\r\n              <td class=\"column-border\">{{ task.tags.join(', ') }}</td>\r\n              <td class=\"column-border\">\r\n                <button @click=\"editTask(task)\">Editar</button>\r\n                <button @click=\"confirmDeleteTask(task)\">Eliminar</button>\r\n              </td>\r\n            </tr>\r\n          </tbody>\r\n        </table>\r\n      </div>\r\n      <h2 style=\"padding-top: 0vh; padding-bottom: 1vh;\"></h2>\r\n      <button @click=\"openTaskForm\" @mouseover=\"animateButton\" @mouseleave=\"resetButton\" class=\"buttons\">+</button>\r\n    </div>\r\n    <!-- Include the EditTaskModal component -->\r\n    <edit-task-modal :show-modal=\"showEditModal\" :task=\"editedTask\" @close-edit-modal=\"closeEditModal\" @update-task=\"updateTask\"></edit-task-modal>\r\n\r\n    <!-- Delete Confirmation Dialog -->\r\n    <div class=\"modal\" v-if=\"showDeleteConfirmation\">\r\n      <div class=\"modal-content\">\r\n        <h2>Confirmar Eliminación</h2>\r\n        <p style=\"color: white;\">¿Estás seguro de que deseas eliminar esta tarea?</p>\r\n        <div>\r\n          <button class=\"buttons\" @click=\"deleteTaskConfirmed\" style=\"font-size: 10px;\">Sí, Eliminar</button>\r\n          <button class=\"buttons\" @click=\"cancelDeleteTask\" style=\"font-size: 10px;\">Cancelar</button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Cookies from 'js-cookie';\r\nimport axios from 'axios';\r\nimport EditTaskModal from './EditTaskModal.vue';\r\n\r\nexport default {\r\n  name: 'AppTareas',\r\n  components: {\r\n    EditTaskModal,\r\n  },\r\n  data() {\r\n    return {\r\n      tasks: [],\r\n      showEditModal: false,\r\n      editedTask: null,\r\n      showDeleteConfirmation: false, // To control the delete confirmation dialog\r\n      taskToDelete: null, // Store the task to be deleted\r\n    };\r\n  },\r\n  methods: {\r\n    goToPage() {\r\n      window.scrollTo({ top: 0, behavior: 'smooth' });\r\n    },\r\n    toggleTaskStatus(task) {\r\n      // Define the endpoint based on the new status\r\n      const endpoint = task.status === 'Completada'\r\n        ? `http://localhost:8080/api/v1/tasks/${task.id}/mark-incomplete`\r\n        : `http://localhost:8080/api/v1/tasks/${task.id}/mark-complete`;\r\n\r\n      // Make a PUT request to update the task status\r\n      axios.put(endpoint)\r\n        .then(() => {\r\n          // Update the task's status if the request is successful\r\n          task.status = task.status === 'Completada' ? 'Incompleta' : 'Completada';\r\n        })\r\n        .catch(error => {\r\n          console.error(`Error updating task status:`, error);\r\n        });\r\n    },\r\n    async fetchTagsForTasks() {\r\n      try {\r\n        await Promise.all(this.tasks.map(async (task) => {\r\n          // Initialize tags as an empty array for each task\r\n          task.tags = [];\r\n          \r\n          const tagResponse = await axios.get(`http://localhost:8080/api/v1/tag/tag/all`);\r\n          const taskTags = tagResponse.data.filter(tag => tag.user_id === Cookies.get('userId') && tag.task_id === task.id);\r\n          task.tags = taskTags.map(tag => tag.tag);\r\n        }));\r\n      } catch (error) {\r\n        console.error('Error fetching tags for tasks:', error);\r\n      }\r\n    },\r\n    openTaskForm() {\r\n      this.showTaskForm = true;\r\n    },\r\n    closeTaskForm() {\r\n      this.showTaskForm = false;\r\n    },\r\n    editTask(task) {\r\n      this.editedTask = { ...task };\r\n      this.showEditModal = true;\r\n    },\r\n    closeEditModal() {\r\n      this.showEditModal = false;\r\n      this.editedTask = null;\r\n    },\r\n    updateTask(updatedTask) {\r\n      const index = this.tasks.findIndex(task => task.id === updatedTask.id);\r\n      if (index !== -1) {\r\n        this.tasks[index] = updatedTask;\r\n      }\r\n      this.closeEditModal();\r\n    },\r\n    confirmDeleteTask(task) {\r\n      this.showDeleteConfirmation = true;\r\n      this.taskToDelete = task;\r\n    },\r\n    deleteTaskConfirmed() {\r\n      axios\r\n        .delete(`http://localhost:8080/api/v1/tasks/${this.taskToDelete.id}`)\r\n        .then(() => {\r\n          const index = this.tasks.findIndex(task => task.id === this.taskToDelete.id);\r\n          if (index !== -1) {\r\n            this.tasks.splice(index, 1);\r\n          }\r\n          this.showDeleteConfirmation = false;\r\n        })\r\n        .catch(error => {\r\n          console.error(`Error deleting task:`, error);\r\n        });\r\n    },\r\n    cancelDeleteTask() {\r\n      this.showDeleteConfirmation = false;\r\n      this.taskToDelete = null;\r\n    },\r\n  },\r\n  computed: {\r\n    hasUserIdCookie() {\r\n      return !!Cookies.get('userId');\r\n    },\r\n  },\r\n  async mounted() {\r\n    try {\r\n      const taskResponse = await axios.get(`http://localhost:8080/api/v1/tasks/all`);\r\n      this.tasks = taskResponse.data.filter(task => task.user_id === Cookies.get('userId'));\r\n\r\n      // Fetch tags for each task\r\n      await this.fetchTagsForTasks();\r\n    } catch (error) {\r\n      console.error('Error fetching tasks:', error);\r\n    }\r\n  },\r\n};\r\n</script>\r\n\r\n\r\n<style>\r\n    .box {\r\n    display: flex;\r\n    align-items: center;\r\n    justify-content: center;\r\n    flex-direction: column;\r\n    backdrop-filter: blur(30px);\r\n    background-color: rgba(248, 248, 248, 0.135);\r\n    border-radius: 5vh;\r\n    width: 95%;\r\n    padding-top: 1vh;\r\n    padding-bottom: 3vh;\r\n    }\r\n    .task-list{\r\n      color: white;\r\n    }\r\n    .column-border {\r\n  border: 1px solid white;\r\n}\r\n\r\n.container {\r\n  height: 59vh;\r\n  display: flex;\r\n  flex-direction: column;\r\n  justify-content: center;\r\n  align-items: center;\r\n  padding-bottom: 12vh;\r\n}    \r\n.buttons:hover{\r\n  background-color: #393939;\r\n}\r\n.buttons.jump {\r\n  animation: jumpAnimation 0.3s ease-in-out;\r\n}\r\n\r\n@keyframes jumpAnimation {\r\n  0% {\r\n    transform: translateY(0);\r\n  }\r\n  50% {\r\n    transform: translateY(-5px);\r\n  }\r\n  100% {\r\n    transform: translateY(0);\r\n  }\r\n}\r\n.buttons{\r\n  padding-top: 1vh;\r\n  padding-bottom: 1vh;\r\n  background-color: #63636395;\r\n  border-radius: 3vh;\r\n  width: 3%;\r\n  justify-content: center;\r\n  align-items: center;\r\n  color: #e4e2e2;\r\n  border-color: #68686800;\r\n  font-size: 25px;\r\n  transition: background-color 0.3s;\r\n  cursor: pointer;\r\n}\r\n</style>\r\n"],"mappings":"AA0DA,OAAOA,OAAM,MAAO,WAAW;AAC/B,OAAOC,KAAI,MAAO,OAAO;AACzB,OAAOC,aAAY,MAAO,qBAAqB;AAE/C,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,UAAU,EAAE;IACVF;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAE,EAAE;MACTC,aAAa,EAAE,KAAK;MACpBC,UAAU,EAAE,IAAI;MAChBC,sBAAsB,EAAE,KAAK;MAAE;MAC/BC,YAAY,EAAE,IAAI,CAAE;IACtB,CAAC;EACH,CAAC;;EACDC,OAAO,EAAE;IACPC,QAAQA,CAAA,EAAG;MACTC,MAAM,CAACC,QAAQ,CAAC;QAAEC,GAAG,EAAE,CAAC;QAAEC,QAAQ,EAAE;MAAS,CAAC,CAAC;IACjD,CAAC;IACDC,gBAAgBA,CAACC,IAAI,EAAE;MACrB;MACA,MAAMC,QAAO,GAAID,IAAI,CAACE,MAAK,KAAM,YAAW,GACvC,sCAAqCF,IAAI,CAACG,EAAG,kBAAgB,GAC7D,sCAAqCH,IAAI,CAACG,EAAG,gBAAe;;MAEjE;MACApB,KAAK,CAACqB,GAAG,CAACH,QAAQ,EACfI,IAAI,CAAC,MAAM;QACV;QACAL,IAAI,CAACE,MAAK,GAAIF,IAAI,CAACE,MAAK,KAAM,YAAW,GAAI,YAAW,GAAI,YAAY;MAC1E,CAAC,EACAI,KAAK,CAACC,KAAI,IAAK;QACdC,OAAO,CAACD,KAAK,CAAE,6BAA4B,EAAEA,KAAK,CAAC;MACrD,CAAC,CAAC;IACN,CAAC;IACD,MAAME,iBAAiBA,CAAA,EAAG;MACxB,IAAI;QACF,MAAMC,OAAO,CAACC,GAAG,CAAC,IAAI,CAACvB,KAAK,CAACwB,GAAG,CAAC,MAAOZ,IAAI,IAAK;UAC/C;UACAA,IAAI,CAACa,IAAG,GAAI,EAAE;UAEd,MAAMC,WAAU,GAAI,MAAM/B,KAAK,CAACgC,GAAG,CAAE,0CAAyC,CAAC;UAC/E,MAAMC,QAAO,GAAIF,WAAW,CAAC3B,IAAI,CAAC8B,MAAM,CAACC,GAAE,IAAKA,GAAG,CAACC,OAAM,KAAMrC,OAAO,CAACiC,GAAG,CAAC,QAAQ,KAAKG,GAAG,CAACE,OAAM,KAAMpB,IAAI,CAACG,EAAE,CAAC;UACjHH,IAAI,CAACa,IAAG,GAAIG,QAAQ,CAACJ,GAAG,CAACM,GAAE,IAAKA,GAAG,CAACA,GAAG,CAAC;QAC1C,CAAC,CAAC,CAAC;MACL,EAAE,OAAOX,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,gCAAgC,EAAEA,KAAK,CAAC;MACxD;IACF,CAAC;IACDc,YAAYA,CAAA,EAAG;MACb,IAAI,CAACC,YAAW,GAAI,IAAI;IAC1B,CAAC;IACDC,aAAaA,CAAA,EAAG;MACd,IAAI,CAACD,YAAW,GAAI,KAAK;IAC3B,CAAC;IACDE,QAAQA,CAACxB,IAAI,EAAE;MACb,IAAI,CAACV,UAAS,GAAI;QAAE,GAAGU;MAAK,CAAC;MAC7B,IAAI,CAACX,aAAY,GAAI,IAAI;IAC3B,CAAC;IACDoC,cAAcA,CAAA