{"ast":null,"code":"import Cookies from 'js-cookie';\nimport axios from 'axios';\nimport ShowModal from './ShowModal.vue'; // Import the ShowModal component\nimport EditTaskModal from './EditTaskModal.vue';\nexport default {\n  name: 'AppTareas',\n  components: {\n    ShowModal,\n    // Register the ShowModal component\n    EditTaskModal\n  },\n  data() {\n    return {\n      tasks: [],\n      // To store the fetched tasks\n      showTaskForm: false,\n      // Controls whether the task creation form is shown\n      showEditModal: false\n    };\n  },\n  methods: {\n    goToPage() {\n      window.scrollTo({\n        top: 0,\n        behavior: 'smooth'\n      });\n    },\n    toggleTaskStatus(task) {\n      // Define the endpoint based on the new status\n      const endpoint = task.status === 'Completada' ? `http://localhost:8080/api/v1/tasks/${task.id}/mark-incomplete` : `http://localhost:8080/api/v1/tasks/${task.id}/mark-complete`;\n\n      // Make a PUT request to update the task status\n      axios.put(endpoint).then(() => {\n        // Update the task's status if the request is successful\n        task.status = task.status === 'Completada' ? 'Incompleta' : 'Completada';\n      }).catch(error => {\n        console.error(`Error updating task status:`, error);\n      });\n    },\n    openTaskForm() {\n      this.showTaskForm = true;\n    },\n    closeTaskForm() {\n      this.showTaskForm = false;\n    },\n    editTask(task) {\n      this.editedTask = {\n        ...task\n      }; // Make a copy of the task data to avoid modifying the original task\n      this.showEditModal = true; // Show the edit task modal\n    },\n\n    closeEditModal() {\n      this.showEditModal = false; // Close the edit task modal\n      this.editedTask = null; // Clear the edited task data\n    },\n\n    updateTask(updatedTask) {\n      // Update the task in the tasks array with the updated data\n      const index = this.tasks.findIndex(task => task.id === updatedTask.id);\n      if (index !== -1) {\n        this.tasks[index] = updatedTask;\n      }\n      this.closeEditModal(); // Close the edit task modal\n    }\n  },\n\n  computed: {\n    hasUserIdCookie() {\n      return !!Cookies.get('userId'); // Check if the cookie 'userId' is present\n    }\n  },\n\n  mounted() {\n    // Fetch tasks when the component is mounted\n    const fetchTasks = () => {\n      // Make an HTTP GET request to fetch tasks\n      axios.get(`http://localhost:8080/api/v1/tasks/all`).then(response => {\n        this.tasks = response.data.filter(task => task.user_id === Cookies.get('userId')); // Update tasks data with the fetched data\n      }).catch(error => {\n        console.error('Error fetching tasks:', error);\n      });\n    };\n    if (this.hasUserIdCookie) {\n      fetchTasks(); // Call the fetchTasks function if 'userId' cookie is present\n    }\n  }\n};","map":{"version":3,"names":["Cookies","axios","ShowModal","EditTaskModal","name","components","data","tasks","showTaskForm","showEditModal","methods","goToPage","window","scrollTo","top","behavior","toggleTaskStatus","task","endpoint","status","id","put","then","catch","error","console","openTaskForm","closeTaskForm","editTask","editedTask","closeEditModal","updateTask","updatedTask","index","findIndex","computed","hasUserIdCookie","get","mounted","fetchTasks","response","filter","user_id"],"sources":["D:\\Documents\\trabajos_semestre_7\\ing_software\\proyecto-1-TodoList\\TodoList-frontend\\src\\components\\AppTareas.vue"],"sourcesContent":["<template>\r\n  <div class=\"container\" v-if=\"hasUserIdCookie\">\r\n    <div class=\"box\">\r\n      <h1>Lista de Tareas</h1>\r\n      <div class=\"task-list\">\r\n        <table class=\"table-with-border\">\r\n          <!-- Table headers here -->\r\n          <thead>\r\n            <tr>\r\n              <th class=\"column-border\">Marcar como completada</th>\r\n              <th class=\"column-border\">Título</th>\r\n              <th class=\"column-border\">Descripción</th>\r\n              <th class=\"column-border\">Fecha</th>\r\n              <th class=\"column-border\">Estado</th>\r\n              <th class=\"column-border\">Acciones</th> <!-- Add this column for Edit and Delete buttons -->\r\n            </tr>\r\n          </thead>\r\n          <tbody>\r\n            <!-- Task rows here -->\r\n            <tr v-for=\"task in tasks\" :key=\"task.id\">\r\n              <td class=\"column-border\">\r\n                <input type=\"checkbox\" :checked=\"task.status === 'Completada'\" @change=\"toggleTaskStatus(task)\">\r\n              </td>\r\n              <td class=\"column-border\">{{ task.title }}</td>\r\n              <td class=\"column-border\">{{ task.description }}</td>\r\n              <td class=\"column-border\">{{ task.date }}</td>\r\n              <td class=\"column-border\">{{ task.status }}</td>\r\n              <td class=\"column-border\">\r\n                <button @click=\"editTask(task)\">Editar</button>\r\n                <button @click=\"deleteTask(task)\">Eliminar</button>\r\n              </td>\r\n            </tr>\r\n          </tbody>\r\n        </table>\r\n      </div>\r\n      <h2 style=\"padding-top: 0vh; padding-bottom: 1vh;\"></h2>\r\n      <button @click=\"openTaskForm\" @mouseover=\"animateButton\" @mouseleave=\"resetButton\" class=\"buttons\">+</button>\r\n    </div>\r\n    <!-- Include the ShowModal component -->\r\n    <show-modal :show-modal=\"showTaskForm\" @close=\"closeTaskForm\"></show-modal>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Cookies from 'js-cookie';\r\nimport axios from 'axios';\r\nimport ShowModal from './ShowModal.vue'; // Import the ShowModal component\r\nimport EditTaskModal from './EditTaskModal.vue';\r\n\r\nexport default {\r\n  name: 'AppTareas',\r\n  components: {\r\n    ShowModal, // Register the ShowModal component\r\n    EditTaskModal,\r\n  },\r\n  data() {\r\n    return {\r\n      tasks: [], // To store the fetched tasks\r\n      showTaskForm: false, // Controls whether the task creation form is shown\r\n      showEditModal: false\r\n    };\r\n  },\r\n  methods: {\r\n    goToPage() {\r\n      window.scrollTo({ top: 0, behavior: 'smooth' });\r\n    },\r\n    toggleTaskStatus(task) {\r\n      // Define the endpoint based on the new status\r\n      const endpoint = task.status === 'Completada'\r\n        ? `http://localhost:8080/api/v1/tasks/${task.id}/mark-incomplete`\r\n        : `http://localhost:8080/api/v1/tasks/${task.id}/mark-complete`;\r\n\r\n      // Make a PUT request to update the task status\r\n      axios.put(endpoint)\r\n        .then(() => {\r\n          // Update the task's status if the request is successful\r\n          task.status = task.status === 'Completada' ? 'Incompleta' : 'Completada';\r\n        })\r\n        .catch(error => {\r\n          console.error(`Error updating task status:`, error);\r\n        });\r\n    },\r\n    openTaskForm() {\r\n      this.showTaskForm = true;\r\n    },\r\n    closeTaskForm() {\r\n      this.showTaskForm = false;\r\n    },\r\n    editTask(task) {\r\n      this.editedTask = { ...task }; // Make a copy of the task data to avoid modifying the original task\r\n      this.showEditModal = true; // Show the edit task modal\r\n    },\r\n\r\n    closeEditModal() {\r\n      this.showEditModal = false; // Close the edit task modal\r\n      this.editedTask = null; // Clear the edited task data\r\n    },\r\n\r\n    updateTask(updatedTask) {\r\n      // Update the task in the tasks array with the updated data\r\n      const index = this.tasks.findIndex(task => task.id === updatedTask.id);\r\n      if (index !== -1) {\r\n        this.tasks[index] = updatedTask;\r\n      }\r\n      this.closeEditModal(); // Close the edit task modal\r\n    },\r\n  },\r\n  computed: {\r\n    hasUserIdCookie() {\r\n      return !!Cookies.get('userId'); // Check if the cookie 'userId' is present\r\n    },\r\n  },\r\n  mounted() {\r\n    // Fetch tasks when the component is mounted\r\n    const fetchTasks = () => {\r\n      // Make an HTTP GET request to fetch tasks\r\n      axios.get(`http://localhost:8080/api/v1/tasks/all`)\r\n        .then(response => {\r\n          this.tasks = response.data.filter(task => task.user_id === Cookies.get('userId')); // Update tasks data with the fetched data\r\n        })\r\n        .catch(error => {\r\n          console.error('Error fetching tasks:', error);\r\n        });\r\n    };\r\n\r\n    if (this.hasUserIdCookie) {\r\n      fetchTasks(); // Call the fetchTasks function if 'userId' cookie is present\r\n    }\r\n  },\r\n};\r\n</script>\r\n\r\n\r\n<style>\r\n    .box {\r\n    display: flex;\r\n    align-items: center;\r\n    justify-content: center;\r\n    flex-direction: column;\r\n    backdrop-filter: blur(30px);\r\n    background-color: rgba(248, 248, 248, 0.135);\r\n    border-radius: 5vh;\r\n    width: 95%;\r\n    padding-top: 1vh;\r\n    padding-bottom: 3vh;\r\n    }\r\n    .task-list{\r\n      color: white;\r\n    }\r\n    .column-border {\r\n  border: 1px solid white;\r\n}\r\n\r\n.container {\r\n  height: 59vh;\r\n  display: flex;\r\n  flex-direction: column;\r\n  justify-content: center;\r\n  align-items: center;\r\n  padding-bottom: 12vh;\r\n}    \r\n.buttons:hover{\r\n  background-color: #393939;\r\n}\r\n.buttons.jump {\r\n  animation: jumpAnimation 0.3s ease-in-out;\r\n}\r\n\r\n@keyframes jumpAnimation {\r\n  0% {\r\n    transform: translateY(0);\r\n  }\r\n  50% {\r\n    transform: translateY(-5px);\r\n  }\r\n  100% {\r\n    transform: translateY(0);\r\n  }\r\n}\r\n.buttons{\r\n  padding-top: 1vh;\r\n  padding-bottom: 1vh;\r\n  background-color: #63636395;\r\n  border-radius: 3vh;\r\n  width: 3%;\r\n  justify-content: center;\r\n  align-items: center;\r\n  color: #e4e2e2;\r\n  border-color: #68686800;\r\n  font-size: 25px;\r\n  transition: background-color 0.3s;\r\n  cursor: pointer;\r\n}\r\n</style>\r\n"],"mappings":"AA4CA,OAAOA,OAAM,MAAO,WAAW;AAC/B,OAAOC,KAAI,MAAO,OAAO;AACzB,OAAOC,SAAQ,MAAO,iBAAiB,EAAE;AACzC,OAAOC,aAA