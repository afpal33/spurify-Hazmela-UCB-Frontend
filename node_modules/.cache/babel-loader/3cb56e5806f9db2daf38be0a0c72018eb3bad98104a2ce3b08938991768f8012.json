{"ast":null,"code":"import Cookies from 'js-cookie';\nimport axios from 'axios';\nexport default {\n  name: 'TareasCompletadas',\n  data() {\n    return {\n      completedTasks: [],\n      // To store the fetched completed tasks\n      tasks: [] // To store the tasks from AppTareas\n    };\n  },\n\n  computed: {\n    hasUserIdCookie() {\n      return !!Cookies.get('userId'); // Check if the cookie 'userId' is present\n    },\n\n    filteredCompletedTasks() {\n      // Filter completed tasks based on the task IDs from AppTareas\n      return this.completedTasks.filter(completedTask => this.tasks.some(task => task.id === completedTask.task_id));\n    }\n  },\n  methods: {\n    getTaskTitle(taskId) {\n      // Get the title of the task by its ID\n      const task = this.tasks.find(task => task.id === taskId);\n      return task ? task.title : '';\n    }\n  },\n  mounted() {\n    // Fetch completed tasks from the 'completed-tasks' API endpoint\n    axios.get('http://localhost:8080/api/v1/completed-tasks/all').then(response => {\n      this.completedTasks = response.data;\n    }).catch(error => {\n      console.error('Error fetching completed tasks:', error);\n    });\n\n    // Fetch tasks from the 'tasks' API endpoint\n    axios.get('http://localhost:8080/api/v1/tasks/all').then(response => {\n      this.tasks = response.data.filter(task => task.user_id === Cookies.get('userId'));\n    }).catch(error => {\n      console.error('Error fetching tasks:', error);\n    });\n  }\n};","map":{"version":3,"names":["Cookies","axios","name","data","completedTasks","tasks","computed","hasUserIdCookie","get","filteredCompletedTasks","filter","completedTask","some","task","id","task_id","methods","getTaskTitle","taskId","find","title","mounted","then","response","catch","error","console","user_id"],"sources":["D:\\Documents\\trabajos_semestre_7\\ing_software\\proyecto-1-TodoList\\TodoList-frontend\\src\\components\\TareasCompletadas.vue"],"sourcesContent":["<template>\r\n    <div class=\"container\" v-if=\"hasUserIdCookie\">\r\n      <div class=\"box\">\r\n        <h1>Lista de Tareas Completadas</h1>\r\n        <div class=\"task-list\">\r\n          <table class=\"table-with-border\">\r\n            <thead>\r\n              <tr>\r\n                <th class=\"column-border\">TÃ­tulo de Tarea</th>\r\n                <th class=\"column-border\">Fecha de Completado</th>\r\n              </tr>\r\n            </thead>\r\n            <tbody>\r\n              <tr v-for=\"completedTask in filteredCompletedTasks\" :key=\"completedTask.id\">\r\n                <td class=\"column-border\">{{ getTaskTitle(completedTask.task_id) }}</td>\r\n                <td class=\"column-border\">{{ completedTask.completion_date }}</td>\r\n              </tr>\r\n            </tbody>\r\n          </table>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </template>\r\n  \r\n  <script>\r\n  import Cookies from 'js-cookie';\r\n  import axios from 'axios';\r\n  \r\n  export default {\r\n    name: 'TareasCompletadas',\r\n    data() {\r\n      return {\r\n        completedTasks: [], // To store the fetched completed tasks\r\n        tasks: [], // To store the tasks from AppTareas\r\n      };\r\n    },\r\n    computed: {\r\n      hasUserIdCookie() {\r\n        return !!Cookies.get('userId'); // Check if the cookie 'userId' is present\r\n      },\r\n      filteredCompletedTasks() {\r\n        // Filter completed tasks based on the task IDs from AppTareas\r\n        return this.completedTasks.filter(completedTask =>\r\n          this.tasks.some(task => task.id === completedTask.task_id)\r\n        );\r\n      },\r\n    },\r\n    methods: {\r\n      getTaskTitle(taskId) {\r\n        // Get the title of the task by its ID\r\n        const task = this.tasks.find(task => task.id === taskId);\r\n        return task ? task.title : '';\r\n      },\r\n    },\r\n    mounted() {\r\n      // Fetch completed tasks from the 'completed-tasks' API endpoint\r\n      axios.get('http://localhost:8080/api/v1/completed-tasks/all')\r\n        .then(response => {\r\n          this.completedTasks = response.data;\r\n        })\r\n        .catch(error => {\r\n          console.error('Error fetching completed tasks:', error);\r\n        });\r\n  \r\n      // Fetch tasks from the 'tasks' API endpoint\r\n      axios.get('http://localhost:8080/api/v1/tasks/all')\r\n        .then(response => {\r\n          this.tasks = response.data.filter(task => task.user_id === Cookies.get('userId'));\r\n        })\r\n        .catch(error => {\r\n          console.error('Error fetching tasks:', error);\r\n        });\r\n    },\r\n  };\r\n  </script>\r\n  \r\n  <style>\r\n    .box {\r\n      display: flex;\r\n      align-items: center;\r\n      justify-content: center;\r\n      flex-direction: column;\r\n      backdrop-filter: blur(30px);\r\n      background-color: rgba(248, 248, 248, 0.135);\r\n      border-radius: 5vh;\r\n      width: 95%;\r\n      padding-top: 1vh;\r\n      padding-bottom: 3vh;\r\n    }\r\n    .task-list {\r\n      color: white;\r\n    }\r\n    .column-border {\r\n      border: 1px solid white;\r\n    }\r\n    .container {\r\n      height: 59vh;\r\n      display: flex;\r\n      flex-direction: column;\r\n      justify-content: center;\r\n      align-items: center;\r\n      padding-bottom: 12vh;\r\n    }\r\n  </style>\r\n  "],"mappings":"AAyBE,OAAOA,OAAM,MAAO,WAAW;AAC/B,OAAOC,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,mBAAmB;EACzBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,cAAc,EAAE,EAAE;MAAE;MACpBC,KAAK,EAAE,EAAE,CAAE;IACb,CAAC;EACH,CAAC;;EACDC,QAAQ,EAAE;IACRC,eAAeA,CAAA,EAAG;MAChB,OAAO,CAAC,CAACP,OAAO,CAACQ,GAAG,CAAC,QAAQ,CAAC,EAAE;IAClC,CAAC;;IACDC,sBAAsBA,CAAA,EAAG;MACvB;MACA,OAAO,IAAI,CAACL,cAAc,CAACM,MAAM,CAACC,aAAY,IAC5C,IAAI,CAACN,KAAK,CAACO,IAAI,CAACC,IAAG,IAAKA,IAAI,CAACC,EAAC,KAAMH,aAAa,CAACI,OAAO,CAC3D,CAAC;IACH;EACF,CAAC;EACDC,OAAO,EAAE;IACPC,YAAYA,CAACC,MAAM,EAAE;MACnB;MACA,MAAML,IAAG,GAAI,IAAI,CAACR,KAAK,CAACc,IAAI,CAACN,IAAG,IAAKA,IAAI,CAACC,EAAC,KAAMI,MAAM